{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.react.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "outDir": "./build/react",

    /* Bundler mode */
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "react-jsx"

    /* Linting */
  },
  "include": ["src/react"]
}
