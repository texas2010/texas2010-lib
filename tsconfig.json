{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    "jsx": "react-jsx",
    "jsxImportSource": "react",

    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
