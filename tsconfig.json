{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",

    "rootDir": "src",
    "outDir": "build",

    "declaration": true,
    "emitDeclarationOnly": false,

    "jsx": "react-jsx",
    "jsxImportSource": "react",

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
