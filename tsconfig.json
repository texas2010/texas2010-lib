{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@shared/*": ["shared/*"],
      "@frontend/*": ["frontend/*"],
      "@backend/*": ["backend/*"]
    },

    "rootDir": "src",
    "outDir": "build",

    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    "jsx": "react-jsx",
    "jsxImportSource": "react",

    "declaration": true,
    "emitDeclarationOnly": false,
    "noEmit": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
